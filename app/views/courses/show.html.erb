
<br />
<%# Course Header with detail and costs %>
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <br />
  <%= image_tag @course.image.url, class: 'img-fluid' %>
  <div class="row">
    <div class="col-sm-4 col-12">
      <span class="badge badge-default">
        <%= number_to_currency @course.cost %>
      </span>
<%# Admin Button %>
      <% if current_user && current_user == @course.user %>
        <br />
        <br />
        <%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-danger btn-large' %>
      <% end %>
<%# Enrolled Button %>
      <br />
      <br />
      <% if current_user %>
        <% if current_user.enrolled_in?(@course) %>
          <h3 class="badge badge-info">You are Enrolled!</h3>
        <% else %>
          <% if @course.free? %>
            <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-primary', method: :post %>
          <% else %>
  <%# Form for payment collection %>
            <br />
            <br />
            <%= form_tag course_enrollments_path(@course) do %>
              
              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                      data-email="<%= current_user.email %>"
                      data-description="<%= @course.title %> (<%= number_to_currency @course.cost %>)"
                      data-amount="<%= (@course.cost * 100).to_i %>"
                      data-locale="auto"></script>
            <% end %>
          <% end %>
        <% end %>
      <% else %>
        <h3 class="badge badge-info">Sign In to Enroll!</h3>
      <% end %>
    </div>
<%# Course detail that includes Sections and Lessons %>
    <div class="col-sm-8 col-12">
      <%= @course.description %>
    </div>
  </div>

  <hr />

  <div class="col-12">
    <% @course.sections.rank(:row_order) do |section| %>
      <br /><br />
      <div class="section">
        <h3>
        <%= section.title %>
        </h3>
        <div class="row">
          <% section.lessons.rank(:row_order).each do |lesson| %>
            <div class="col-12 col-sm-6">
              <div class="lesson text-center">
              <br />
              <%= link_to lesson_path(lesson) do %>
                <b><%= lesson.title %></b>
                <br />
                <%= lesson.subtitle %>
              <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <br class="clr" />
      </div>
    <% end %>
  </div>
</div>